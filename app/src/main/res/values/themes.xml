<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FreeHUDDisplay" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/hud_green</item>
        <item name="colorPrimaryVariant">@color/hud_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/hud_green</item>
        <item name="colorSecondaryVariant">@color/hud_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Fullscreen theme for main activity -->
    <style name="Theme.FreeHUDDisplay.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>